{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm --filter @polybuddy/db build && pnpm --filter @polybuddy/analytics build && pnpm --filter @polybuddy/api build"
  },
  "deploy": {
    "startCommand": "cd apps/api && node --experimental-specifier-resolution=node dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
