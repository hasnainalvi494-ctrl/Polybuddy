{
  "name": "polybuddy",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "pnpm --filter @polybuddy/api dev",
    "dev:web": "pnpm --filter @polybuddy/web dev",
    "dev:ingestion": "pnpm --filter @polybuddy/ingestion dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @polybuddy/db generate",
    "db:migrate": "pnpm --filter @polybuddy/db migrate",
    "db:push": "pnpm --filter @polybuddy/db push",
    "db:studio": "pnpm --filter @polybuddy/db studio",
    "ingestion:dev": "pnpm --filter @polybuddy/ingestion dev",
    "ingestion:start": "pnpm --filter @polybuddy/ingestion start",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
